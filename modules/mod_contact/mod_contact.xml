<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
<name>mod_contact</name>
<creationDate>15 May 2015</creationDate>
<author>Niels Nübel</author>
<copyright>Copyright © 2015 niels-nuebel.de</copyright>
<authorEmail>niels@niels-nuebel.de</authorEmail>
<authorUrl>http://www.niels-nuebel.de</authorUrl>
<version>1.0.0</version>
<description>MOD_CONTACT_XML_DESCRIPTION</description>
<files>
    <folder>language</folder>
    <folder>tmpl</folder>
    <filename module="mod_contact">mod_contact.php</filename>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>mod_contact.xml</filename>
</files>
<config>
    <fields name="params">
        <fieldset name="basic" addfieldpath="/modules/mod_contact/fields">
	        <field  name="logotop"
	                type="media"
	                directory="template"
	                label="MOD_CONTACT_LOGOTOP_LABEL"
	                description="MOD_CONTACT_LOGOTOP_DESC"
	                size="40"
	                preview="true"
			        />
	        <field name="text" label="MOD_CONTACT_TEXT_LABEL" type="editor" width="300" filter="safehtml" />
            <field name="name" type="text" default="" label="MOD_CONTACT_NAME_LABEL" description="MOD_CONTACT_NAME_DESC" size="10" />
            <field name="street" type="text" default="" label="MOD_CONTACT_STREET_LABEL" description="MOD_CONTACT_STREET_DESC" size="10" />
            <field name="city" type="text" default="" label="MOD_CONTACT_CITY_LABEL" description="MOD_CONTACT_CITY_DESC" size="10" />
            <field name="phone" type="text" default="" label="MOD_CONTACT_PHONE_LABEL" description="MOD_CONTACT_PHONE_DESC" size="10" />
            <field name="mobile" type="text" default="" label="MOD_CONTACT_MOBILE_LABEL" description="MOD_CONTACT_MOBILE_DESC" size="10" />
            <field name="email" type="text" default="" label="MOD_CONTACT_EMAIL_LABEL" description="MOD_CONTACT_EMAIL_DESC" size="10" />
            <field name="fax" type="text" default="" label="MOD_CONTACT_FAX_LABEL" description="MOD_CONTACT_FAX_DESC" size="10" />
        </fieldset>
	    <fieldset name="socialmedia">
		    <field name="facebook" type="url"
		           size="40" label="MOD_CONTACT_FACEBOOK_LABEL"
		           description="MOD_CONTACT_FACEBBOK_DESC"
				    />
		    <field name="google" type="url"
		           size="40" label="MOD_CONTACT_GOOGLE_LABEL"
		           description="MOD_CONTACT_GOOGLE_DESC"
				    />
		    <field name="twitter" type="url"
		           size="40" label="MOD_CONTACT_TWITTER_LABEL"
		           description="MOD_CONTACT_TWITTER_DESC"
				    />
		    <field name="instagram" type="url"
		           size="40" label="MOD_CONTACT_INSTAGRAM_LABEL"
		           description="MOD_CONTACT_INSTAGRAM_DESC"
				    />
		    <field name="pinterest" type="url"
		           size="40" label="MOD_CONTACT_PINTEREST_LABEL"
		           description="MOD_CONTACT_PINTEREST_DESC"
				    />
	    </fieldset>
	    <fieldset name="form">
		    <field name="recipient" type="text"
		           size="40" label="MOD_CONTACT_RECIPIENT_LABEL"
		           description="MOD_CONTACT_RECIPIENT_DESC"
					/>
		    <field name="fields"
		           type="kickrepeatable"
		           icon="list"
		           description="MOD_CONTACT_FIELDS_DESC"
		           label="MOD_CONTACT_FIELDS_LABEL"
		           default=""
		           maximum="10"
				    >
			    <fields name="params">
				    <fieldset hidden="true" name="list_fields_modal" repeat="true">
					    <field name="name"
					           label="MOD_CONTACT_FIELD_NAME_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field name="label"
					           label="MOD_CONTACT_FIELD_LABEL_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field name="placeholder"
					           label="MOD_CONTACT_FIELD_PLACEHOLDER_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field name="icon"
					           label="MOD_CONTACT_FIELD_ICON_LABEL"
					           description="MOD_CONTACT_FIELD_ICON_DESC"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field
							    name="required"
							    type="radio"
							    default="0"
							    label="MOD_CONTACT_FIELD_REQUIRED_LABEL"
							    >
						    <option value="0">JNO</option>
						    <option value="1">JYES</option>
					    </field>
					    <field name="requiredmessage"
					           label="MOD_CONTACT_FIELD_REQUIREDMESSAGE_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field
							    name="email"
							    type="radio"
							    default="0"
							    label="MOD_CONTACT_FIELD_EMAIL_LABEL"
							    >
						    <option value="0">JNO</option>
						    <option value="1">JYES</option>
					    </field>
					    <field name="emailmessage"
					           label="MOD_CONTACT_FIELD_EMAILMESSAGE_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field name="minlength"
					           label="MOD_CONTACT_FIELD_MINLENGTH_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
					    <field name="minlengthmessage"
					           label="MOD_CONTACT_FIELD_MINLENGTHMESSAGE_LABEL"
					           size="10"
					           class="input-small"
					           type="text" />
				    </fieldset>
			    </fields>
		    </field>
		    <field
				    name="mailfrom"
				    type="text"
				    default="{email}"
				    label="MOD_CONTACT_MAILFROM_LABEL"
				    description="MOD_CONTACT_MIALFROM_DESC" />
		    <field
				    name="fromname"
				    type="text"
				    default="{name}"
				    label="MOD_CONTACT_FROMNAME_LABEL"
				    description="MOD_CONTACT_FROMNAME_DESC" />
		    <field
				    name="subject"
				    type="textarea" rows="3"
				    default="Kontakt von {name}"
				    label="MOD_CONTACT_SUBJECT_LABEL"
				    description="MOD_CONTACT_SUBJECT_DESC" />
		    <field
				    name="body"
				    type="textarea" rows="3"
				    default=""
				    label="MOD_CONTACT_BODY_LABEL"
				    description="MOD_CONTACT_BODY_DESC" />

	    </fieldset>
	    <fieldset name="map">
		    <field name="maplink" type="text" default="" label="MOD_CONTACT_LINK_LABEL" description="MOD_CONTACT_LINK_DESC" size="10" />
	    </fieldset>
	    <fieldset name="advanced">
		    <field
				    name="layout"
				    type="modulelayout"
				    label="JFIELD_ALT_LAYOUT_LABEL"
				    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

		    <field
				    name="moduleclass_sfx"
				    type="textarea" rows="3"
				    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

		    <field
				    name="cache"
				    type="list"
				    default="1"
				    label="COM_MODULES_FIELD_CACHING_LABEL"
				    description="COM_MODULES_FIELD_CACHING_DESC">
			    <option
					    value="1">JGLOBAL_USE_GLOBAL</option>
			    <option
					    value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		    </field>

		    <field
				    name="cache_time"
				    type="text"
				    default="900"
				    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
		    <field
				    name="cachemode"
				    type="hidden"
				    default="static">
			    <option
					    value="static"></option>
		    </field>
	    </fieldset>
    </fields>

</config>
</extension>

